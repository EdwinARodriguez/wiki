<h1>Admin Article Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_article_types.each do |admin_article_type| %>
      <tr>
        <td><%= admin_article_type.name %></td>
        <td><%= admin_article_type.description %></td>
        <td><%= link_to 'Show', admin_article_type %></td>
        <td><%= link_to 'Edit', edit_admin_article_type_path(admin_article_type) %></td>
        <td><%= link_to 'Destroy', admin_article_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

